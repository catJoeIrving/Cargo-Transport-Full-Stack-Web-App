<%- include('../template/head')-%>
<body class="text-center">
    <div class="cover-container d-flex w-100 h-100 p-3 mx-auto flex-column">
        <%- include('../template/nav')-%>
        <main role="main" class="inner cover">
            <%- include('../template/messages')-%>
            <h1 class="cover-heading">Update Cargo</h1>
            <form method="POST" action="/updateCargo">
                <div class="form-group">
                    <label for="cargoid">Cargo ID</label> <!-- Should be secondary ID -->
                    <input type="text" class="form-control" id="cargoid" name="cargoid" placeholder="Enter the ID of the Cargo you'd like to update" required>
                </div>
                <div class="form-group">
                    <label for="weight">Weight</label>
                    <input type="text" class="form-control" id="weight" name="weight" placeholder="Enter the Cargo's Weight" >
                </div>
                <div class="form-group">
                    <label for="cargotype">Cargo Type</label>
                    <input type="text" class="form-control" id="cargotype" name="cargotype" placeholder="Enter the Cargo type" >
                </div>
                <div class="form-group">
                    <label for="departure">Departure</label>
                    <input type="date" class="form-control" id="departure" name="departure" >
                </div>
                <div class="form-group">
                    <label for="arrival">Arrival</label>
                    <input type="date" class="form-control" id="arrival" name="arrival" >
                </div>
                <div class="form-group">
                    <label for="spaceship">Spaceship</label>
                    <select class="form-control" id="spaceship" name="spaceship" > <!-- Loops through to display each spaceshipp in the DB as a drop down -->
                        <% data.forEach(function(spaceship) { %>
                            <option value="<%= spaceship.secondary_id %>"><%= spaceship.secondary_id %> - Max Weight: <%= spaceship.maxweight %></option>
                        <% }); %>
                    </select>
                </div>
                <button type="submit" class="btn btn-dark">Submit</button>
            </form>
            <div class="btn-group mb-3 float-right"> <!-- CRUD ops nav bar for cargo-->
                <a href="/addCargo" class="btn btn-dark">Add</a>
                <a href="/updateCargo" class="btn btn-dark">Update</a>
                <a href="/removeCargo" class="btn btn-dark">Remove</a>
            </div>
        </main>
        <%- include('../template/footer')-%>
    </div>
</body>
<!-- underlines cargo in nav bar-->
<script>
    window.onload = function () {
        document.getElementById('cargo').classList.add('active');
    };
</script>

</html>